# Jaunt Data Scout - Local Environment Configuration
# Copy this to .env and fill in your API keys and configuration

# API Keys and Secrets
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jaunt_data_scout
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_SSL_MODE=disable

# S3/Object Storage (for local testing, you can use MinIO or mock)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=jaunt-data-scout-local
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Workflow Configuration Overrides
CONFIG_PATH=config/defaults.yaml
BUDGET_SPLIT_RATIO=0.7
EARLY_STOP_MIN_NEW_UNIQUE_RATE=0.05
EARLY_STOP_WINDOW=200
BUDGET_MAX_API_CALLS=5000
BUDGET_MAX_WALL_CLOCK_HOURS=6

# Connector-specific Budget Overrides
BUDGET_GOOGLE_TEXT_CAPACITY=1000
BUDGET_GOOGLE_NEARBY_CAPACITY=1500
BUDGET_GOOGLE_DETAILS_CAPACITY=1000
BUDGET_TAVILY_API_CAPACITY=1000
BUDGET_WEB_FETCH_CAPACITY=3000
BUDGET_LLM_TOKENS_CAPACITY=200000

# Concurrency Settings
CONCURRENCY_WEB_FETCH=8
CONCURRENCY_EXTRACT_LLM=4
CONCURRENCY_GEOCODE_VALIDATE=4

# Output Configuration
OUTPUT_FORMAT=jsonl
OUTPUT_PATH=output/edinburgh-results.jsonl
LOG_LEVEL=info

# Feature Flags (set to true to enable, false to mock)
ENABLE_GOOGLE_CONNECTORS=false
ENABLE_WEB_DISCOVERY=false
ENABLE_LLM_EXTRACTION=false
ENABLE_REAL_STORAGE=false